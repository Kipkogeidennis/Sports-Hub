<!-- activity_football.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewFootballGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Football Games"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:padding="16dp" />

        <!-- News Section -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_football_team"/>

        <!-- Football Scores Section -->
        <TextView
            android:id="@+id/textViewFootballScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Football Scores"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFootballScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_football_scores"/>

        <!-- Upcoming Matches Section -->
        <TextView
            android:id="@+id/textViewUpcomingMatches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming Matches"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewUpcomingMatches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_upcoming_footballmatch"/>

    </LinearLayout>
</ScrollView>
